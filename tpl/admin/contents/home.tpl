	<div class="col-md-6">
		<form method="POST" action="">
			<fieldset>
				<legend>{__CREATE_GALLERY__}</legend>
				<div class="row form-group">
					<div class="col-md-4">
						<input type="button" class="btn btn-default btn-md" id="addGalleryButton" value="{__CREATE_GALLERY__}" />
					</div>
				</div>
			</fieldset>
		</form>
	</div>
	<div class="col-md-6">
		<form method="POST" action="">
			<fieldset>
				<legend>{__ACTIVE_GALLERIES__}</legend>
